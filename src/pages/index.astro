---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

interface Recipe {
	id: number;
	title: string;
	ingredients: string;
}

let recipes: Recipe[] = [];
let error: Error | null = null;

try {
	const { data, error: fetchError } = await supabase
		.from('recipes')
		.select('id, title, ingredients')
		.limit(25);

	if (fetchError) error = fetchError;
	else if (data) recipes = data;
} catch (e) {
	error = e as Error;
}
---
<Layout title="Omnicookbook">
	<h1 style="text-align:center;color:#c41e16;">Welcome to the Omnicookbook</h1>
	{error && <p style="color:#b00020;text-align:center;">Error: {error.message}</p>}
	{recipes.length > 0 ? (
		<ul style="max-width:600px;margin:1rem auto;list-style:none;padding:0;">
			{recipes.map(r => (
				<li style="background:#fff7ef;border:1px solid #ddd;border-radius:.5rem;padding:.75rem;margin:.5rem 0;">
					<strong>{r.title}</strong> â€” {r.ingredients}
				</li>
			))}
		</ul>
	) : (
		!error && <p style="text-align:center;">No data found.</p>
	)}
</Layout>
