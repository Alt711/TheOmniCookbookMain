<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weekly Planner</title>
    <link rel="stylesheet" href="style.css">
    <style>
        /* --- GLOBAL STYLES --- */
        body {
            font-family: Arial, sans-serif;
            background: #f2f2f2;
            margin: 0;
            padding: 20px;
        }

        /* Fixed collapsible panel */
        details {
            position: fixed;
            top: 20px;
            right: 20px;
            width: 320px;
            background: #fff;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            z-index: 10;
        }

        summary {
            cursor: pointer;
            padding: 15px 20px;
            background-color: #eee;
            border-radius: 8px 8px 0 0;
            font-weight: bold;
        }

        .day {
            text-align: center;
        }

        .block {
            width: 100px;
            height: 120px;
            background-color: white;
            border: 2px solid #ccc;
            border-radius: 8px;
            position: relative;
            margin-bottom: 10px;
            transition: background-color 0.3s ease;
        }

        .line1, .line2 {
            height: 2px;
            width: 100%;
            background-color: black;
            position: absolute;
            left: 0;
            transform: translateY(-50%);
        }

        .line1 { bottom: 33%; }
        .line2 { bottom: 67%; }

        .day p {
            margin: 0;
            font-weight: bold;
        }

        .day:nth-child(6) .block,
        .day:nth-child(7) .block {
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>

<details>
    <summary> Meal Planner</summary>

    <section class="content" id="planner-content">
        <div class="planner">
            <div class="day"><div class="block"><div class="line1"></div><div class="line2"></div></div><p>Monday</p></div>
            <div class="day"><div class="block"><div class="line1"></div><div class="line2"></div></div><p>Tuesday</p></div>
            <div class="day"><div class="block"><div class="line1"></div><div class="line2"></div></div><p>Wednesday</p></div>
            <div class="day"><div class="block"><div class="line1"></div><div class="line2"></div></div><p>Thursday</p></div>
            <div class="day"><div class="block"><div class="line1"></div><div class="line2"></div></div><p>Friday</p></div>
            <div class="day"><div class="block"><div class="line1"></div><div class="line2"></div></div><p>Saturday</p></div>
            <div class="day"><div class="block"><div class="line1"></div><div class="line2"></div></div><p>Sunday</p></div>
        </div>
    </section>
</details>

</body>
</html>